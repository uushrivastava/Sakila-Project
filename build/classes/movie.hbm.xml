<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.highradius.training.struts.model.Movie"
		table="film">

		<meta attribute="class-description">
			mapping of language table to language POJO
		</meta>

		<id name="id" type="integer" column="film_id">
			<generator class="native" />
		</id>

		<property name="title" column="title" type="string" />

		<property name="desc" column="description" type="string" />

		<property name="releaseyear" column="release_year" type="integer" />

		<property name="director" column="director" type="string" />

		<property name="rating" column="rating" type="string" />

		<property name="special" column="special_features" type="string" />
		
		<property name="isDeleted" column="is_deleted" type="integer" />
		
		<many-to-one class="com.highradius.training.struts.model.languagePOJO" lazy="false" fetch="select"  name="language">
			<column name="language_id" not-null="true"></column>
		</many-to-one>

	</class>
</hibernate-mapping>